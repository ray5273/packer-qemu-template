#cloud-config
autoinstall:
  version: 1
  locale: en_US
  keyboard:
    layout: us
  early-commands:
    - systemctl stop ssh
  late-commands:
    - |
      if [ -d /sys/firmware/efi ]; then
        apt-get install -y efibootmgr
        efibootmgr -o $(efibootmgr | perl -n -e '/Boot(.+)\* ubuntu/ && print $1')
      fi
  ssh:
    install-server: true
    allow-pw: true
    ssh_quiet_keygen: true
    allow_public_ssh_keys: true
  packages:
    - qemu-guest-agent
    - sudo
    - curl
    - ca-certificates
  storage:
    layout:
      name: direct
    swap:
      size: 0
  user-data:
    package_upgrade: false
    timezone: KST
    users:
      - name: ubuntu
        groups: [adm, sudo]
        lock-passwd: false
        sudo: ALL=(ALL) NOPASSWD:ALL
        shell: /bin/bash
        passwd: "$6$X9FuqL144YwlcJ9r$7f528TOYnE4XS/Ks10u91RP56H6mKcMHFzAy69rCOhFo4yIyyfBSadfQeX5f93DMIC086pbJUDbxmph2fEwT51"
        ssh_authorized_keys:
          - ssh-rsa 
